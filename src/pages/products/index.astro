<Layout title="gymshark products">
  <div class="products-body">
    <div class="products-container">
      {
        gymsharkProducts2.map((p) => (
          <div class="box" id={p.color}>
            <a class="image-Link" href={"/products/" + p.name}>
              <div class="imageBox">
                <Image
                  class="product-image"
                  src={p.image1}
                  alt={p.name}
                  loading="lazy"
                  width={200}
                  height={150}
                />


                <Image
                class="product-image fade"
                src={p.image2}
                alt={p.name}
                loading="lazy"
                width={200}
                height={150}
                />
              </div>
              <h4 class="product-name">{p.productName}</h4>
              <p class="product-type">{p.category}</p>
              <p class="color">{p.color}</p>
              <p class="color">Size: {p.size}</p>
              <strong class="price">L.{p.price}</strong>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</Layout>

<style>
  .products-body {
    margin-top: 200px;
    margin-bottom: 200px;
    padding: 0 100px;
  }
  .products-container {
    max-width: 100vw;
    height: auto;
    padding: 0 60px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 100px;
  }

  .product-image {
    width: 260px;
    height: 350px;
  }

  .fade {
    position: absolute;
    opacity: 0;
    width: 260px;
    height: 350px;
    transition: opacity 0.2s ease;
  }

  .fade:hover {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .imageBox {
    width: 260px;
    height: 350px;
    display: flex;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
  }

  .image-Link {
    text-decoration: none;
    color: #000000;
  }

  .product-name {
    font-family: "Roboto", sans-serif;
    margin: 10px 0;
  }

  .product-type {
    font-family: "Roboto", sans-serif;
    margin: 3px 0;
  }

  .color {
    font-family: "Roboto", sans-serif;
    margin: 3px 0;
    width: 200px;
  }

  .price {
    font-family: "Roboto", sans-serif;
    margin: 3px 0;
  }

  .box {
    padding: 1rem;
  }

  @media screen and (max-width: 767px) {
    .products-body {
